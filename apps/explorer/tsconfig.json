{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "~/*": ["./src/*"],
            "@mysten/sui.js": ["../../sdk/typescript/src/"],
            "@mysten/bcs": ["../../sdk/bcs/src/"],
            "@mysten/wallet-adapter-base": [
                "../../sdk/wallet-adapter/adapters/base-adapter/src/"
            ],
            "@mysten/wallet-standard": [
                "../../sdk/wallet-adapter/wallet-standard/src/"
            ],
            "@mysten/wallet-adapter-all-wallets": [
                "../../sdk/wallet-adapter/adapters/all-wallets/src/"
            ],
            "@mysten/wallet-adapter-unsafe-burner": [
                "../../sdk/wallet-adapter/adapters/unsafe-burner/src/"
            ],
            "@mysten/wallet-adapter-wallet-standard": [
                "../../sdk/wallet-adapter/adapters/wallet-standard-adapter/src/"
            ],
            "@mysten/wallet-kit-core": [
                "../../sdk/wallet-adapter/wallet-kit-core/src/"
            ],
            "@mysten/wallet-kit": ["../../sdk/wallet-adapter/wallet-kit/src/"]
        }
    },
    "include": ["src"]
}
