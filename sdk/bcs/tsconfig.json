{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2015",
		"moduleResolution": "node",
		"lib": ["ESNext", "dom"],
		"declaration": true,
		"rootDir": "src",
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"composite": true,
		"isolatedModules": true
	},
	"include": ["src"]
}
