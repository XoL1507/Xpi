{
  "compilerOptions": {
    "target": "es2020",
    "module": "ESNext",
    "lib": ["dom", "es2020"],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "moduleResolution": "Node",
    "composite": true,
    "rootDir": "src"
  },
  "include": ["src"]
}
